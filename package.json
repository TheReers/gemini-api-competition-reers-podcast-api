{
  "name": "gemini-api-competition-reers-podcast",
  "version": "1.0.0",
  "description": "Reers Podcast API for Gemini API Competition",
  "main": "index.js",
  "scripts": {
    "test": "NODE_ENV=test ./node_modules/.bin/mocha dist/src/shared/test_utils/before_hook --exit --timeout 10000 --bail --reporter spec --exit --full-trace --sort --retries 2 dist/**/*.spec.js",
    "lint": "node dist/src/lint_codes.js",
    "seed": "node dist/src/seed.js",
    "build": "./node_modules/.bin/tsc --project ./tsconfig.json",
    "start": "node dist/src/index.js",
    "build:watch": "./node_modules/.bin/tsc --project ./tsconfig.json --watch",
    "dev": "NODE_ENV=development ./node_modules/.bin/nodemon dist/src/index.js",
    "migrate:up": "node dist/src/migrations/index.js",
    "docker:build": "NODE_VERSION=$(echo $(node -v) | sed -e 's/v//g'); DOCKER_BUILDKIT=1 docker build --build-arg NODE_VERSION=${NODE_VERSION} -t ai-podcast-server .",
    "predocker:run": "npm run docker:build",
    "docker:run": "docker run --name ai-podcast-server --env-file .env -d ai-podcast-server",
    "docker:start": "NODE_VERSION=$(echo $(node -v) | sed -e 's/v//g') docker-compose up --build -d",
    "docker:stop": "NODE_VERSION=$(echo $(node -v) | sed -e 's/v//g') docker-compose down",
    "predocker:test": "npm run docker:build -- --target build-stage",
    "docker:test": "NODE_VERSION=$(echo $(node -v) | sed -e 's/v//g') docker-compose run -v ${PWD}/src:/app/src ai-podcast-server npm run test",
    "postdocker:test": "npm run docker:stop",
    "predocker:watch": "npm run docker:build -- --target build-stage",
    "docker:watch": "NODE_VERSION=$(echo $(node -v) | sed -e 's/v//g') docker-compose run -v ${PWD}/src:/app/src ai-podcast-server npm run test:watch",
    "postdocker:watch": "npm run docker:stop",
    "prepare": "husky"
  },
  "keywords": [
    "podcast",
    "reers",
    "ai",
    "competition",
    "gemini",
    "api",
    "google",
    "text-to-speech"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@google/generative-ai": "0.11.4",
    "axios": "0.24.0",
    "bcryptjs": "2.4.3",
    "bull-board": "2.1.3",
    "bullmq": "5.7.12",
    "cloudinary": "2.2.0",
    "cors": "2.8.5",
    "date-fns": "3.6.0",
    "dotenv": "12.0.4",
    "express": "4.17.2",
    "express-rate-limit": "7.4.0",
    "firebase-admin": "12.1.1",
    "get-mp3-duration": "1.0.0",
    "glob": "7.2.0",
    "helmet": "7.1.0",
    "jsonwebtoken": "8.5.1",
    "logform": "2.6.0",
    "mongoose": "6.1.6",
    "morgan": "1.10.0",
    "redis": "4.6.13",
    "validator": "13.11.0",
    "winston": "3.12.0",
    "winston-mongodb": "5.1.1",
    "winston-transport-sentry-node": "2.7.0"
  },
  "devDependencies": {
    "@types/bcrypt": "5.0.0",
    "@types/bcryptjs": "2.4.6",
    "@types/chai": "4.3.0",
    "@types/cors": "2.8.17",
    "@types/eslint": "8.56.6",
    "@types/express": "4.17.13",
    "@types/glob": "7.2.0",
    "@types/jsonwebtoken": "8.5.7",
    "@types/mocha": "9.0.0",
    "@types/mongoose": "5.11.97",
    "@types/morgan": "1.9.3",
    "@types/node": "17.0.8",
    "@types/sinon": "10.0.13",
    "@types/supertest": "2.0.12",
    "@types/validator": "13.11.9",
    "@typescript-eslint/eslint-plugin": "5.9.1",
    "@typescript-eslint/parser": "5.9.1",
    "chai": "4.3.4",
    "eslint": "8.6.0",
    "husky": "9.0.11",
    "mocha": "9.1.4",
    "nock": "13.5.4",
    "nodemon": "2.0.15",
    "sinon": "15.0.1",
    "superagent": "7.0.2",
    "supertest": "6.3.3",
    "typescript": "4.5.4"
  }
}
